{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"jasmine",
			"lodash",
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"specs/**/*.ts"
	]
}